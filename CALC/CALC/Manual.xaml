<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CALC.Manual">
    <Grid MaximumHeightRequest="200">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label  Grid.Row="0" Text="Podaj dane sieci:"/>
        <Entry  Grid.Row="1" x:Name="SSID_Entry"       Placeholder="Nazwa sieci" TextChanged="TextUpdate" Text="CALC"/>
        <Entry  Grid.Row="2" x:Name="Password_Entry"   Placeholder="Hasło"       TextChanged="TextUpdate" Text="HasloDoWiFi123!"/>
        <Entry  Grid.Row="3" x:Name="IP_Entry"         Placeholder="Adres IP"    TextChanged="TextUpdate" Text="192.168.197.216"/>
        <Button Grid.Row="4" x:Name="Submit_Button"    Text="Zatwierdź"          Clicked="OnSubmitClicked" IsEnabled="True"/>
    </Grid>
</ContentPage>