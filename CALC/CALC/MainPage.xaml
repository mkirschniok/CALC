<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CALC.MainPage"
             BackgroundColor="#101B24">

    <ScrollView
        VerticalOptions="CenterAndExpand">
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="CenterAndExpand">

            <Image
                Source="logo.png"/>

            <Button
                x:Name="Scan_Btn"
                Text="Zeskanuj kod QR" 
                SemanticProperties.Hint="Zeskanuj kod QR"
                Clicked="OnScanClicked"
                HorizontalOptions="Fill"
                VerticalOptions="CenterAndExpand"
                BackgroundColor="#C0DAF2"/>
            <Button
                x:Name="Manual_Btn"
                Text="Wprowadź dane sieci ręcznie" 
                SemanticProperties.Hint="Wprowadź dane sieci ręcznie"
                Clicked="OnManualClicked"
                HorizontalOptions="Fill"
                VerticalOptions="CenterAndExpand"
                BackgroundColor="#C0DAF2"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
